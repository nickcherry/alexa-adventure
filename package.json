{
  "name": "alexa-adventure-server",
  "version": "1.0.0",
  "description": "Development server for Alexa Adventure",
  "main": "serve.js",
  "scripts": {
    "build": "./build.sh",
    "preinstall": "npm install --prefix apps/adventure apps/adventure",
    "start": "node serve",
    "test": "./apps/adventure/node_modules/mocha/bin/_mocha ./apps/adventure/test --recursive",
    "test-debug": "node --inspect --debug-brk ./apps/adventure/node_modules/mocha/bin/_mocha ./apps/adventure/test --recursive --timeout=0",
    "test-script": "./apps/adventure/node_modules/mocha/bin/_mocha ./apps/adventure/test/script_json_tests.js"
  },
  "author": "Nick Cherry",
  "dependencies": {
    "alexa-app-server": "^2.2.4"
  }
}
